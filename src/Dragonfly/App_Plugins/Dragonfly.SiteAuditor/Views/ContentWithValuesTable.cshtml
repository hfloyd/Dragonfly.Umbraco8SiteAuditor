@using Dragonfly.SiteAuditor.Helpers;
@using Umbraco.Web.Composing;
@using Umbraco.Web;
@using Umbraco.Core.Models.PublishedContent;

@model IEnumerable<IPublishedContent>

@{
    IEnumerable<IPublishedContent> contentList = Model.ToList();
    var fancyFormat = true;
    var propertyAlias = Dragonfly.UmbracoHelpers.Mvc.GetSafeViewDataString(ViewData, "PropertyAlias");
    var includeUnpublished = Dragonfly.UmbracoHelpers.Mvc.GetSafeViewDataBool(ViewData, "IncludeUnpublished");

    var counter = 0;
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet" />

    @*<style>
            {

            }
        </style>*@
    @*<!--<script src="/scripts/snippet-javascript-console.min.js?v=1"></script>-->*@
</head>
<body>
    <div class="container">

        <h1>Nodes with Values for Property '@propertyAlias'</h1>
        <p>Total Nodes Returned: @contentList.Count()</p>

        <table id="umbracodata" class="table table-striped table-bordered table-hover table-sm" cellspacing="0" style="width:100%">
            <thead>
                <tr>
                    @if (fancyFormat)
                    {
                        <th>#</th>
                        <th>Actions</th>
                    }
                    <th>DocType</th>
                    <th>"@propertyAlias" Data Type</th>
                    <th>Node ID</th>
                    <th>Node Name</th>
                    <th>"@propertyAlias" Value</th>
                   @* <th>Value Model Type</th>*@
                    <th>Date Last Updated</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var node in contentList)
                {
                    counter++;
                    var dtInfo = AuditHelper.GetPropertyDataTypeInfo(Current.Services, propertyAlias, node);

                <tr>
                    @if (fancyFormat)
                    {
                        // #
                        <td>@counter</td>

                        //Actions
                        <td>
                            @{ Html.RenderPartial("/App_Plugins/Dragonfly.SiteAuditor/Views/DataFormats/NodeActions.cshtml", node); }
                        </td>
                    }

                    @*//DocType*@
                    <td>@{Html.RenderPartial("/App_Plugins/Dragonfly.SiteAuditor/Views/DataFormats/DocTypeInfo.cshtml", dtInfo);}</td>

                    @*//PropertyAlias Type*@
                    <td>@{Html.RenderPartial("/App_Plugins/Dragonfly.SiteAuditor/Views/DataFormats/PropertyTypeInfo.cshtml", dtInfo);}</td>

                    @*//Node ID*@
                    <td>@node.Id</td>

                    @*//Node Name*@
                    <td>@node.Name</td>

                    @*//PropertyAlias Value*@
                    @if (dtInfo.DataType != null)
                    {
                        <td>@{ Html.RenderPartial("/App_Plugins/Dragonfly.SiteAuditor/Views/DataFormats/PropertyDataValue.cshtml", dtInfo);}</td>
                    }
                    else
                    {
                        var propVal = node.Value<string>(propertyAlias);
                        <td>@propVal</td>
                    }

                    @*//Value Model Type
        <td>@dtInfo.Property.GetValue().GetType().ToString()</td>*@

                    @*//Date Last Updated*@
                    <td>@{ Html.RenderPartial("/App_Plugins/Dragonfly.SiteAuditor/Views/DataFormats/DateValue.cshtml", node.UpdateDate);}</td>

                </tr>
                }

            </tbody>
        </table>

    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#umbracodata').DataTable();
            @*//$('#umbracodata').dataTable( {
            //    "columns": [
            //    { "width": "20%" },
            //    null,
            //    null,
            //    null,
            //    null
            //        ]
            //} );*@
        });
    </script>
</body>
</html>